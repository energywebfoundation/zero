// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String?  @unique
  firstName String
  lastName  String
  roles     UserRole[]
  drafts    Draft[]
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Draft {
  id        Int       @id @default(autoincrement())
  User      User      @relation(fields: [userId], references: [id])
  userId    Int
  data      Json
  draftType DraftType
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum UserRole {
  seller
  buyer
  admin
}

enum DraftType {
  facility
}
