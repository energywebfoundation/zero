{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@energyweb/zero-api-client": ["libs/api-client/src/index.ts"],
      "@energyweb/zero-ui-account": ["libs/account/src/index.ts"],
      "@energyweb/zero-ui-assets": ["libs/ui/assets/src/index.ts"],
      "@energyweb/zero-ui-auth": ["libs/auth/src/index.ts"],
      "@energyweb/zero-ui-buyer": ["libs/buyer/src/index.ts"],
      "@energyweb/zero-ui-core": ["libs/ui/core/src/index.ts"],
      "@energyweb/zero-ui-localization": ["libs/ui/localization/src/index.ts"],
      "@energyweb/zero-ui-seller": ["libs/seller/src/index.ts"],
      "@energyweb/zero-ui-theme": ["libs/ui/theme/src/index.ts"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
