{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@energy-web-zero/api-client": ["libs/api-client/src/index.ts"],
      "@energy-web-zero/buyer": ["libs/buyer/src/index.ts"],
      "@energy-web-zero/seller": ["libs/seller/src/index.ts"],
      "@energy-web-zero/store-configure": ["libs/store/configure/src/index.ts"],
      "@energy-web-zero/ui-assets": ["libs/ui/assets/src/index.ts"],
      "@energy-web-zero/ui-auth": ["libs/ui/auth/src/index.ts"],
      "@energy-web-zero/ui-localization": ["libs/ui/localization/src/index.ts"],
      "@energy-web-zero/ui/account": ["libs/ui/account/src/index.ts"],
      "@energyweb/zero-forms": ["libs/ui/forms/src/index.ts"],
      "@energyweb/zero-theme": ["libs/ui/theme/src/index.ts"],
      "@energyweb/zero-ui": ["libs/ui/core/src/index.ts"],
      "@energyweb/zero-ui-utils": ["libs/ui/utils/src/index.ts"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
