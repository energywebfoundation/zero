  "components": {
    "securitySchemes": {
      "access-token": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "LoginDataDTO": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "testuser1@foo.bar"
          },
          "password": {
            "type": "string",
            "example": "test"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "LoginResponseDataDto": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          }
        },
        "required": [
          "accessToken"
        ]
      },
      "UserRole": {
        "type": "string",
        "enum": [
          "seller",
          "buyer",
          "admin"
        ]
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "email": {
            "type": "string",
            "example": "testuser1@foo.bar"
          },
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Smith"
          },
          "roles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserRole"
            }
          },
          "emailConfirmed": {
            "type": "boolean",
            "example": false
          }
        },
        "required": [
          "id",
          "email",
          "firstName",
          "lastName",
          "roles",
          "emailConfirmed"
        ]
      },
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "testuser1@foo.bar"
          },
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Smith"
          },
          "roles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserRole"
            }
          },
          "password": {
            "type": "string",
            "example": "test"
          }
        },
        "required": [
          "email",
          "firstName",
          "lastName",
          "roles",
          "password"
        ]
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Smith"
          },
          "roles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserRole"
            }
          },
          "password": {
            "type": "string",
            "example": "test"
          }
        }
      },
      "PasswordChangeDto": {
        "type": "object",
        "properties": {
          "oldPassword": {
            "type": "string",
            "example": "old pass"
          },
          "newPassword": {
            "type": "string",
            "example": "old pass"
          }
        },
        "required": [
          "oldPassword",
          "newPassword"
        ]
      },
      "PasswordResetInitDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@email.com"
          }
        },
        "required": [
          "email"
        ]
      },
      "PasswordResetDto": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "22c026e5-2f67-4ccd-9299-c79b91cb9438"
          },
          "newPassword": {
            "type": "string",
            "example": "my new password XYZ#@"
          }
        },
        "required": [
          "token",
          "newPassword"
        ]
      },
      "CreateEmailConfirmationDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "testuser1@foo.bar"
          },
          "password": {
            "type": "string",
            "example": "test"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "UpdateEmailConfirmationDto": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "22c026e5-2f67-4ccd-9299-c79b91cb9438"
          }
        },
        "required": [
          "token"
        ]
      },
      "DraftType": {
        "type": "string",
        "enum": [
          "facility"
        ]
      },
      "DraftDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "userId": {
            "type": "number",
            "example": 1
          },
          "data": {
            "type": "object",
            "example": "{ \"field1\": \"value\", \"field2\" : [1, 2, 3] }"
          },
          "draftType": {
            "$ref": "#/components/schemas/DraftType"
          }
        },
        "required": [
          "id",
          "userId",
          "data",
